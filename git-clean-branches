#!/bin/bash
delete_type="-d"

if type git-default-branch > /dev/null 2>&1; then
    target="$(git default-branch)"
else
    target="$(git config init.defaultBranch)"
    target="${target:-master}"
fi

if [[ "$1" == "-D" ]]; then
    delete_type="-D"
elif [[ -n "$1" ]]; then
    target="$1"
fi

[ -z "$(git branch)" ] && exit

git branch --merged "$target" | grep -v "$target" | while read -r branch;
do
    git branch "$delete_type" "${branch}"
done
